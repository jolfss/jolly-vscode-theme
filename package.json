{
  "name": "jolly",
  "displayName": "Jolly",
  "description": "A vibrant light theme inspired by volcanoes, glaciers, and the northern lights",
  "version": "1.0.0",
  "publisher": "SeanBrynjolfsson",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "color-theme",
    "light",
    "volcanic",
    "glacier",
    "aurora",
    "northern lights"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Jolly Light",
        "uiTheme": "vs",
        "path": "./themes/jolly-light-color-theme.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jolfss/jolly-vscode-theme"
  },
  "scripts": {
    "build": "uv run build_theme.py",
    "watch": "uv run --with watchdog watchmedo shell-command --patterns='*.json5' --recursive --command='uv run build_theme.py' themes/"
  }
}
